# Configuración del servidor
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Configuración MQTT (Mosquitto)
MQTT_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Configuración de Firebase (Firestore)
# Opción 1: Usar archivo JSON (Recomendado para desarrollo local)
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# Opción 2: Usar variables de entorno (Recomendado para producción)
# FIREBASE_PROJECT_ID=cycloconnect
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-fbsvc@cycloconnect.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Configuración adicional
COMMAND_TIMEOUT=5000
TELEMETRY_BATCH_SIZE=100
